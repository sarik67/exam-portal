# ExamPortal — Environment Variables
# Copy this file to .env and fill in your real values before deploying.
# NEVER commit .env to git.

# Flask secret key — generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-random-64-character-string

# MySQL database settings
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=exam_portal

# Production server settings
PORT=5000
WAITRESS_THREADS=64

# Set to 'production' to enable production mode automatically
FLASK_ENV=production
